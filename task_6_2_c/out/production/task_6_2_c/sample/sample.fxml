<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<Pane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <children>
        <VBox alignment="CENTER" prefHeight="400.0" prefWidth="400.0">
            <children>
            <TextField fx:id="tfData" alignment="CENTER" editable="false">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </TextField>
            <TextArea fx:id="taDictum" editable="false" prefHeight="200.0" prefWidth="200.0" wrapText="true">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </TextArea>
                <Button fx:id="btnGetDictum" disable="true" mnemonicParsing="false" onAction="#onAction_btnGetDictum" text="get dictum">
                    <VBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </VBox.margin>
                </Button>
                <Button fx:id="btnStartConection" mnemonicParsing="false" onAction="#onAction_btnStartConection" text="connect / disconnect">
                    <VBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </VBox.margin>
                </Button>
            </children></VBox>
    </children>
</Pane>
